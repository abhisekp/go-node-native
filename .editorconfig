root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

[{*.ats,*.cts,*.mts,*.ts}]
indent_size = 4
tab_width = 4

[{*.cjs,*.es6,*.js,*.mjs}]
indent_size = 4
tab_width = 4

[{*.go,*.go2}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.mk,GNUmakefile,GNUmakefile.inc,makefile,makefile.inc}]
tab_width = 4
